@model object
@using System.Reflection

<div class="p-6 max-w-md mx-auto">
    <h2 class="text-2xl font-bold mb-4">Edit @Model.GetType().Name</h2>

    <form asp-action="Edit" method="post" class="space-y-4">
        @* Hidden Id field *@
        @{
            var idProp = Model.GetType().GetProperty("Id");
            var idValue = idProp?.GetValue(Model);
        }
        <input type="hidden" name="Id" value="@idValue" />

        @* Loop through all scalar properties dynamically *@
        @foreach (var prop in Model.GetType().GetProperties())
        {
            if (prop.Name == "Id") continue;

            // Skip collections
            if (typeof(System.Collections.IEnumerable).IsAssignableFrom(prop.PropertyType) && prop.PropertyType != typeof(string)) continue;

            // Skip navigation/reference properties
            if (prop.PropertyType.IsClass && prop.PropertyType != typeof(string)) continue;

            var value = prop.GetValue(Model);

            <div class="flex flex-col">
                <label class="mb-1 font-semibold">@prop.Name</label>
                <input type="text" name="@prop.Name" value="@value" class="border p-2 rounded w-full" />
            </div>
        }

        <div class="flex space-x-4 mt-4">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-dark">Cancel</a>
        </div>
    </form>
</div>
