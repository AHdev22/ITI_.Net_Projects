@model object
@using System.Reflection

<div class="p-6 max-w-md mx-auto">
    <h2 class="text-2xl font-bold mb-4">@Model.GetType().Name Details</h2>

    <div class="space-y-2">
        @foreach (var prop in Model.GetType().GetProperties())
        {
            // Skip collections
            if (typeof(System.Collections.IEnumerable).IsAssignableFrom(prop.PropertyType) && prop.PropertyType != typeof(string)) continue;

            // Skip navigation/reference properties (class types except string)
            if (prop.PropertyType.IsClass && prop.PropertyType != typeof(string)) continue;

            <div class="flex justify-between border-b py-1">
                <span class="font-semibold">@prop.Name:</span>
                <span>@(prop.GetValue(Model) ?? "-")</span>
            </div>
        }
    </div>

    <div class="flex space-x-4 mt-4">
        <a asp-action="Edit" asp-route-id="@Model.GetType().GetProperty("Id")?.GetValue(Model)" class="btn btn-info">Edit</a>

        <a asp-action="Delete" asp-route-id="@Model.GetType().GetProperty("Id")?.GetValue(Model)" class="btn btn-danger">Delete</a>

        <a asp-action="Index" class="btn btn-dark">Back</a>
    </div>
</div>
