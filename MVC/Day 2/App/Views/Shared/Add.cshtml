@model object
@using System.Reflection

<div class="p-6 max-w-md mx-auto">
    <h2 class="text-2xl font-bold mb-4">Add @Model.GetType().Name</h2>

    <form asp-action="Add" method="post" class="space-y-4">
        @foreach (var prop in Model.GetType().GetProperties())
        {
            // Skip Id
            if (prop.Name == "Id") continue;

            // Skip collections
            if (typeof(System.Collections.IEnumerable).IsAssignableFrom(prop.PropertyType) && prop.PropertyType != typeof(string)) continue;

            // Skip navigation/reference properties (class types except string)
            if (prop.PropertyType.IsClass && prop.PropertyType != typeof(string)) continue;

            // Determine input type
            string inputType = prop.PropertyType.Name switch
            {
                "Int32" or "Int64" or "Double" or "Decimal" => "number",
                "DateTime" => "date",
                "Boolean" => "checkbox",
                _ => "text"
            };

            <div class="flex flex-col">
                <label class="mb-1 font-semibold">@prop.Name</label>

                @if (inputType == "checkbox")
                {
                    <input type="checkbox" name="@prop.Name" class="h-5 w-5" />
                }
                else
                {
                    <input type="@inputType" name="@prop.Name" class="border p-2 rounded w-full" />
                }
            </div>
        }

        <div class="flex space-x-4 mt-4">
            <button type="submit" class="btn btn-dark">Add</button>
            <a asp-action="Index" class="btn btn-danger">Cancel</a>
        </div>
    </form>
</div>
