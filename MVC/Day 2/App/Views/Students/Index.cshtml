@model IEnumerable<UniversitySystem.Models.Student>

@{
    ViewData["Title"] = "Students";
}

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Image</th>
            <th>Address</th>
            <th>Grade</th>
            <th>Dept #</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Image</td>
                <td>@student.Address</td>
                <td>@student.Grade</td>
                <td>@student.DeptId</td>
                <td>                    
                    <a asp-action="Details" asp-route-id="@student.Id" class="btn btn-primary">Details</a>
                    <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-info">Edit</a>
                    <a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Students" asp-action="Add" class="btn btn-dark btn-lg mt-3">Add Student</a>
